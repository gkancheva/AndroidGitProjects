<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/margin_padding_8dp"
    android:layout_marginBottom="@dimen/margin_padding_8dp">

    <ImageView
        android:id="@+id/iv_play"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/ic_play_arrow_24dp"
        android:contentDescription="@string/play_trailer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_trailer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_16sp"
        android:layout_marginLeft="@dimen/margin_padding_16dp"
        android:layout_marginStart="@dimen/margin_padding_16dp"
        app:layout_constraintLeft_toRightOf="@id/iv_play"
        app:layout_constraintStart_toEndOf="@id/iv_play"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Official trailer" />

</android.support.constraint.ConstraintLayout>