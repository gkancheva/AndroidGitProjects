<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.notesapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/pencil"
        android:label="@string/app_name"
        android:roundIcon="@drawable/pencil_round"
        android:supportsRtl="true"
        android:theme="@style/NoteAppTheme"
        android:fullBackupContent="true">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.notes.NotesActivity" />
        <activity android:name=".activities.user.SignUpLoginActivity" />
    </application>

</manifest>