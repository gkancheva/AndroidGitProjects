<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin">

    <ImageView
        android:id="@+id/icon_event"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="6dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/icon_event">
        <TextView
            android:id="@+id/event_provider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/primary_text_size"
            android:textStyle="bold"
            android:textIsSelectable="false"
            android:text="Hilton Garden Inn"
            android:padding="@dimen/padding_text"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/event_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/primary_text_size"
                android:textStyle="bold"
                android:text="19h00"
                android:padding="@dimen/padding_text"/>
            <TextView
                android:id="@+id/event_start_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/event_time"
                android:textSize="@dimen/primary_text_size"
                android:text="Check-in"
                android:padding="@dimen/padding_text"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/event_conf_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/primary_text_size"
                android:text="Conf. nb:"
                android:padding="@dimen/padding_text"/>
            <TextView
                android:id="@+id/event_confirmation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/primary_text_size"
                android:text="3124567834"
                android:layout_toRightOf="@id/event_conf_desc"
                android:padding="@dimen/padding_text"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>